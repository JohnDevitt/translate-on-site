{
  "manifest_version": 2,
  "name": "Translate on Site",
  "descrription": "A web extension for autotranslating pages on load or on change.",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icons/compass.svg",
    "default_title": "Translate on Site",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["<all_urls>"]
}
